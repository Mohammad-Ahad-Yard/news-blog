<div id="admin-content">
      <div class="container">
      <div class="row">
        <div class="col-md-12">
            <h1 class="admin-heading">Update Article</h1>
        </div>
        <div class="col-md-8 mx-auto">
          <div class="card">
            <h5 class="card-header">Update Article</h5>
            <div class="card-body">
              <!-- Form -->
              <form action="/admin/update-article/<%= article.id %>" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="article_title" class="form-label">Title</label>
                    <input type="text" name="title" value="<%= article.title %>" class="form-control" autocomplete="off" required>
                </div>
                <div class="mb-3">
                    <label for="summernote" class="form-label">Description</label>
                    <textarea name="content" id="summernote" class="form-control" rows="5"  required><%= article.content %></textarea>
                </div>
                <div class="mb-3">
                    <label for="article_category" class="form-label">Category</label>
                    <select name="category" id="article_category" class="form-control">
                      <% categories.forEach(category => { %>
                        <% if(article.category.id == category.id){ %>
                          <option value="<%= category.id %>" selected><%= category.name %></option>
                        <% } else { %>
                          <option value="<%= category.id %>"><%= category.name %></option>
                        <% } %>
                      <% }) %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="article_image" class="form-label">Article image</label><br>
                    <img src="/uploads/<%= article.image %>" alt="Article Image" class="article-image w-25 border border-3 border-primary mb-3" style="max-width: 100%; height: auto;">
                    <input type="file" name="image" id="article_image" class="form-control">
                </div>
                <input type="submit" name="submit" class="btn btn-primary" value="Update" />
              </form>
              <!--/Form -->
              <!-- Error Message -->
              <%- include('../partials/error') %>
              <!-- Error Message -->
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.js"></script>
<script>
  $(document).ready(function () {
    $('#summernote').summernote({
      placeholder: 'Start typing...',
      tabsize: 2,
      height: 200
    });
  });

  document.querySelector("form").addEventListener("submit", function(event) {
    const unwantedField = document.querySelector("input[name='files']");
    if (unwantedField) {
      unwantedField.remove();
    }
  });
</script>

<%- contentFor('summernoteCSS') %>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.css" rel="stylesheet">